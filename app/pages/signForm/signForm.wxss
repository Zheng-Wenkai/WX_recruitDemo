.container {
    width: 100%;
}

.background_img {
    width: 100%;
    position: absolute;
    height: 1720rpx;
}

.avatar {
    height: 170rpx;
    width: 170rpx;
    position: absolute;
    left: 290rpx;
    top: 50rpx;
    border-radius: 50%;
    border: 3px solid rgba(255, 255, 255, 1);
}

button {
    height: 50rpx;
    line-height: 50rpx;
    border-radius: 40rpx;
    font-size: 28rpx;
    font-weight: 600;
    font-family: Microsoft Yahei;
    color: rgba(16, 16, 16, 0.8);
    border: 3rpx solid #aaa;
    background-color: #fff;
}

.btn1 {
    margin-top: 265rpx;
    margin-bottom: 30rpx;
}

.btn2 {
    margin-top: -600rpx;
}

.btn3 {
    margin-top: -80rpx;
    padding-left: 40rpx;
    letter-spacing: 20rpx;
    width: 175rpx;
}

.dashed {
    position: fixed;
    width: 100%;
    height: 100rpx;
    margin-top: -85rpx;
}

input, picker {
    width: 600rpx;
    height: 65rpx;
    line-height: 65rpx;
    text-align: left;
    padding-left: 20rpx;
    background: #fff;
    color: rgba(16, 16, 16, 1);
    font-size: 16px;
    border-radius: 20rpx;
    border: 3rpx solid #c9b1b1;
    margin: 10rpx auto;
    z-index: 88;
}

.ipt {
    display: flex;
}

textarea {
    margin: 120rpx auto;
    width: 600rpx;
    height: 400rpx;
    border: 3rpx solid #c9b1b1;
    z-index: 88;
    line-height: 48rpx;
    text-align: left;
    padding-left: 20rpx;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    background: #fff;
    color: rgba(16, 16, 16, 1);
    font-size: 32rpx;
    border-radius: 20rpx;
}
